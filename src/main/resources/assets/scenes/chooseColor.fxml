<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<Pane xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.polimi.ingsw.am37.client.gui.controller.ChooseColorController" maxHeight="-Infinity"
      maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="550.0"
      xmlns="http://javafx.com/javafx/17">
   <children>
      <ImageView fitHeight="300.0" fitWidth="550.0">
         <image>
            <Image url="@../images/GameWallpaper.jpg"/>
         </image>
      </ImageView>
      <VBox alignment="CENTER" prefHeight="300.0" prefWidth="550.0">
         <children>
            <Text fx:id="label" fill="WHITE" fontSmoothingType="LCD" mouseTransparent="true" strokeType="OUTSIDE"
                  strokeWidth="0.0" text="Click on any image to select the corrisponding color" wrappingWidth="480.0">
               <font>
                  <Font size="20.0"/>
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="30.0"/>
               </VBox.margin>
            </Text>
            <HBox alignment="CENTER" prefHeight="300.0" prefWidth="550.0">
               <children>
                  <ImageView fx:id="blue" fitWidth="90.0" onMouseClicked="#colorClicked" pickOnBounds="true"
                             preserveRatio="true">
                     <image>
                        <Image url="@../images/BlueTeacher.png"/>
                     </image>
                     <HBox.margin>
                        <Insets left="5.0" right="5.0"/>
                     </HBox.margin>
                  </ImageView>
                  <ImageView fx:id="red" fitWidth="90.0" onMouseClicked="#colorClicked" pickOnBounds="true"
                             preserveRatio="true">
                     <image>
                        <Image url="@../images/RedTeacher.png"/>
                     </image>
                     <HBox.margin>
                        <Insets left="5.0" right="5.0"/>
                     </HBox.margin>
                  </ImageView>
                  <ImageView fx:id="green" fitWidth="90.0" onMouseClicked="#colorClicked" pickOnBounds="true"
                             preserveRatio="true">
                     <image>
                        <Image url="@../images/GreenTeacher.png"/>
                     </image>
                     <HBox.margin>
                        <Insets left="5.0" right="5.0"/>
                     </HBox.margin>
                  </ImageView>
                  <ImageView fx:id="yellow" fitWidth="90.0" onMouseClicked="#colorClicked" pickOnBounds="true"
                             preserveRatio="true">
                     <image>
                        <Image url="@../images/YellowTeacher.png"/>
                     </image>
                     <HBox.margin>
                        <Insets left="5.0" right="5.0"/>
                     </HBox.margin>
                  </ImageView>
                  <ImageView fx:id="pink" fitWidth="90.0" onMouseClicked="#colorClicked" pickOnBounds="true"
                             preserveRatio="true">
                     <image>
                        <Image url="@../images/PinkTeacher.png"/>
                     </image>
                     <HBox.margin>
                        <Insets left="5.0" right="5.0"/>
                     </HBox.margin>
                  </ImageView>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</Pane>
